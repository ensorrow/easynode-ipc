@import "../../core/module/submittrialsuccess.mcss";

// Varibles:
// ========================================================================

$m-submittrialsuccess_width =  992px;
$m-submittrialsuccess_height = 260px;
$m-submittrialsuccess_border_color = #DDD;

$m-submittrialsuccess_tip_label_width =  298px;
$m-submittrialsuccess_tip_icon_margin_left = 234px;
$m-submittrialsuccess_tip_icon_margin_top = 64px;

$m-submittrialsuccess_tip_width = $m-submittrialsuccess_height - $m-submittrialsuccess_tip_label_width;






// Component:       `m-submittrialsuccess`
// ========================================================================

.m-submittrialsuccess {

	outline: $m-submittrialsuccess_border_color solid 1px;

	min-height: $m-submittrialsuccess_height;
	width: $m-submittrialsuccess_width;

	margin: 40px auto;

	.tip-label{
		width: $m-submittrialsuccess_tip_label_width;
		height: $m-submittrialsuccess_height;

		.tip-icon{
			margin-left: $m-submittrialsuccess_tip_icon_margin_left;
			margin-top:  $m-submittrialsuccess_tip_icon_margin_top;
			@extend .f-fr;
		}
		@extend .f-fl;
	}
	.tip{
		width: $m-submittrialsuccess_tip_width;
		height: $m-submittrialsuccess_height;
		padding: 60px 0 0 20px;

		.tip-header{
			font-family:MicrosoftYaHei;
	        font-size:16px;
	        color:#333333;;
	        line-height:18px;
			margin: 10px 10px 10px 10px;
	 	}

		.tip-bd{
			font-family:MicrosoftYaHei;
	        font-size:14px;
	        color:#666666;;
	        line-height:14px;
	        margin: 15px 15px 15px 15px;
	        @extend .f-fl;
		}

		.tip-button-detail{
			border: none;
        	background: transparent;
        	font-size:16px;
        	color:#38ABD0;
        	margin: 15px 15px 15px 15px;
        	@extend .f-fl;
		}

		.tip-footer{
			clear: both;
			font-family:MicrosoftYaHei;
	        font-size:12px;
	        color:#666666;;
	        line-height:14px;
	        margin: 15px 15px 15px 15px;
		}
		@extend .f-fl;
	}

	$clearfix();
}

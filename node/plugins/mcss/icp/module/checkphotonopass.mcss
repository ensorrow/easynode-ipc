@import "../../core/module/checkphotonopass.mcss";

// Varibles:
// ========================================================================

$m-checkphotonopass_width =  992px;
$m-checkphotonopass_height = 260px;
$m-checkphotonopass_border_color = #DDD;

$m-checkphotonopass_tip_label_width =  298px;
$m-checkphotonopass_tip_icon_margin_left = 234px;
$m-checkphotonopass_tip_icon_margin_top = 64px;

$m-checkphotonopass_tip_width = $m-checkphotonopass_height - $m-checkphotonopass_tip_label_width;






// Component:       `m-checkphotonopass`
// ========================================================================

.m-checkphotonopass {

	outline: $m-checkphotonopass_border_color solid 1px;

	min-height: $m-checkphotonopass_height;
	width: $m-checkphotonopass_width;

	margin: 40px auto;

	.tip-label{
		width: $m-checkphotonopass_tip_label_width;
		height: $m-checkphotonopass_height;

		.tip-icon{
			margin-left: $m-checkphotonopass_tip_icon_margin_left;
			margin-top:  $m-checkphotonopass_tip_icon_margin_top;
			@extend .f-fr;
		}
		@extend .f-fl;
	}
	.tip{
		width: $m-checkphotonopass_tip_width;
		height: $m-checkphotonopass_height;
		padding: 60px 0 0 20px;

		.tip-header{
			font-family:MicrosoftYaHei;
	        font-size:16px;
	        color:#333333;;
	        line-height:18px;
			margin: 10px 10px 50px 10px;
	 	}

		.tip-bd{
			font-family:MicrosoftYaHei;
	        font-size:14px;
	        color:#666666;;
	        line-height:14px;
	        margin: 15px 15px 15px 15px;

		}
		@extend .f-fl;
	}

	$clearfix();
}
